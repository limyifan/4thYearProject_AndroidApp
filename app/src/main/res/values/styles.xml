<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#FFAF05</item>
        <item name="colorPrimaryDark">@color/DarkSlateGray</item>
        <item name="colorButtonNormal">@color/LightGrey</item>
    </style>
<style name = "NumberPickerTheme" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@android:color/white</item>

    <item name ="colorControlNormal">@android:color/transparent</item>

    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:textSize">30sp</item>
</style>
    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light" />

</resources>